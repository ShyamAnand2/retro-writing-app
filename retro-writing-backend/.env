# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
# Local MongoDB (for development)
MONGODB_URI=mongodb://localhost:27017/retro-writing-app

# MongoDB Atlas (for production - replace with your connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/retro-writing-app?retryWrites=true&w=majority

# JWT Secret (IMPORTANT: Change this to a random, secure string in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_2026

# JWT Expiration (token valid for 7 days)
JWT_EXPIRE=7d

# CORS Origin (frontend URL)
CLIENT_URL=http://localhost:3000
